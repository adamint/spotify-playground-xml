<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.auth.SpotifyAuthActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/spotify_user_login_action"
        style="@style/ButtonWithoutStartIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spotify_user_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/spotify_anonymous_login_action"
        style="@style/ButtonWithoutStartIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spotify_anonymous_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spotify_user_login_action" />

</androidx.constraintlayout.widget.ConstraintLayout>